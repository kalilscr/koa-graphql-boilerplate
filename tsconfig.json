{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es2017"],
      "strict": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }